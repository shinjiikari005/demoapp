  <body>
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <%= link_to "Demo App", root_path, id: "logo" %>
        <nav>
          <ul class="nav navbar-nav pull-right">
            <li><%= link_to "Users",   users_path %></li>
            <li><%= link_to "Tweets",   tweets_path %></li>
            <li><%= link_to "Help",   help_path %></li>
          </ul>
        </nav>
      </div>
    </header>
    <div class="container">
    
    <%= yield %>
          <footer class="footer">
        <small>
          My First App
        </small>
        <nav>
          <ul>
            <li><%= link_to "Please Don't Press", 'https://en.wikipedia.org/wiki/Neon_Genesis_Evangelion' %></li>
          </ul>
        </nav>
      </footer>
    </div>
